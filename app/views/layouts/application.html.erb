<!DOCTYPE html>
<html>
<head>
  <title>Arnonym</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
	
		<% if poll_session %>
			<p><%= link_to "Log out from Poll", log_out_path %></p>
		<% end %>

			<% if flash[:notice] %>
				<div class="alert alert-info">
					<%= flash[:notice] %>
				</div>
			<% end %>

		<%= yield %>
	
		</div>
	</div>
</div>

</body>
</html>
